<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <com.brightcove.player.view.BrightcoveExoPlayerVideoView
            android:id="@+id/brightcove_video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/ll_layout"
            android:fitsSystemWindows="true"
            android:background="@color/window_background"
            android:scaleType="fitXY"/>

    <RelativeLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

        <com.kult.widgets.TextView_Kult
                android:id="@+id/tv_details"
                style="@style/TextView"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:text="Details"
                android:layout_height="wrap_content"/>

        <com.kult.widgets.TextView_Kult
                android:id="@+id/tv_share"
                style="@style/TextView"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:text="Share"
                android:layout_height="wrap_content"/>

        <com.kult.widgets.TextView_Kult
                android:id="@+id/tv_saved"
                style="@style/TextView"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:drawableTop="@mipmap/ic_launcher_round"
                android:drawablePadding="5dp"
                android:layout_width="wrap_content"
                android:text="Saved"
                android:layout_height="wrap_content"/>

        <ScrollView android:id="@+id/ll_details"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/tv_details"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:visibility="gone"
                    android:scrollbarStyle="insideInset">
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <com.kult.widgets.TextView_Kult
                        android:id="@+id/tv_title"
                        style="@style/TextView"
                        tools:text="VIDEO TITLE"/>

                <com.kult.widgets.TextView_Kult
                        android:id="@+id/tv_desc"
                        style="@style/TextView"
                        tools:text="VIDEO DESCRIPTION"/>

                <com.kult.widgets.TextView_Kult
                        style="@style/TextView"
                        android:text="Video Like This:"
                        tools:text="VIDEO LIKE THIS"/>

                <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        android:orientation="horizontal"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</RelativeLayout>

